{
    "name": "cylmat/partigen",
    "description": "Piano partition image generator and application",
    "license": "OSL-3.0",
    "type": "project",
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "require": {
        "php-di/php-di": "^6.4",
        "spatie/pdf-to-image": "^2.2",
        "spipu/html2pdf": "^5.2"
    },
    "require-dev": {
        "friends-of-phpspec/phpspec-code-coverage": "^6.1",
        "kint-php/kint": "^4.1",
        "phpmd/phpmd": "^2.9",
        "phpspec/phpspec": "^6.2",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "dg/bypass-finals": "^1.3",
        "phpstan/phpstan": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Partigen\\": "src/"
        }
    },
    "scripts": {
        "cs": "phpcs",
        "cbf": "phpcbf",
        "md": "phpmd src ansi cleancode,codesize,controversial,design,naming,unusedcode",
        "spec": "phpspec run",
        "stan": "phpstan analyse src --memory-limit=2G --level=5"
    }
}
