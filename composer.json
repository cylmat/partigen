{
    "name": "cylmat/partigen",
    "description": "Piano partition image generator and application",
    "license": "OSL-3.0",
    "type": "project",
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "php-di/php-di": "^6.4",
        "spatie/pdf-to-image": "^2.2",
        "spipu/html2pdf": "^5.2"
    },
    "require-dev": {
        "kint-php/kint": "^3.3",
        "phpmd/phpmd": "^2.9",
        "phpspec/phpspec": "^6.2",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Partigen\\": "src/"
        }
    },
    "scripts": {
        "cs": "phpcs",
        "md": "phpmd src ansi cleancode,codesize,controversial,design,naming,unused",
        "spec": "phpspec run"
    }
}
